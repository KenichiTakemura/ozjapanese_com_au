<div class="comment_form">
	<%= form_for(@comment) do |f| %>
	<%= f.text_area :body, :style => "width:300px;height:50px" %>
	<div class="left">
		<%= f.submit t("post.comment_new"), :class => "btn btn-info", :remote => true , :method => :post %>
		<%= image_tag(current_flyer.flyer_image) %>
	</div>
	<% end %>
</div>
