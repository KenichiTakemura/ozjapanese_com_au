<div class="container-fluid">
	<div class="row-fluid">
	<div class="row-fluid" style="margin-top:10px">
			<ul class="thumbnails">
			<% i=1 %>
			<% @older_posts.reverse_each do |post| %>
			<li class="link_view_top opacity_<%=i*20%>">
				<%= show_a_post_box(post) %>
				<% i += 1 %>
			</li>
			<% end %>				
			<li class="link_view_top opacity_100">
				<%= show_a_post_box(@post) %>
			</li>
			<% i=1 %>
			<% @newer_posts.reverse_each do |post| %>
			<li class="link_view_top opacity_<%=100-(i*20)%>">
				<%= show_a_post_box(post) %>
				<% i += 1 %>
			</li>
			<% end %>	
		</ul>
	</div>
	<div class="row-fluid">

		<div class="btn-toolbar">
			<div class="btn-group">
				<%= link_to_with_icon("#{t("post.newer")}",Ozlink.heading_link(@heading,"newer"),"btn btn-link","","icon-plus","")%>
			</div>
			<div class="btn-group">
				<%= link_to_with_icon("#{t("post.older")}",Ozlink.heading_link(@heading,"older"),"btn btn-link","","icon-tag","")%>
			</div>
			<div class="btn-group">
				<%= link_to_with_icon("#{t("post.back")}",root_path,"btn btn-link","","icon-home","")%>
			</div>
			<div class="btn-group">
				<%= post_write_new(@heading, :signin_with_following)%>
			</div>
		</div>
		<div class="row-fluid">
				<div class="span8" id="side_post_area">
				<%= show_a_post(@post, @heading)%>
				</div>
				<div class="span4" id="side_comment_thread_<%=@post.id%>">
				<%= show_comment_thread(@post, @heading)%>
				</div>
		</div>
	</div>
</div>
