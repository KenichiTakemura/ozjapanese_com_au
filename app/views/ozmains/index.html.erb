<%= show_alert %>
<div class="hero-unit">
	<h1><%= t(:hello_world)%></h1>
	<p>
		<%= OzjapaneseStyle.hello_description%>
	</p>
	<a class="btn btn-primary btn-large"><%= t(:contact_us)%> &raquo;</a>
	<%= render :partial => "layouts/site_detail" %>
	<a class="btn btn-info btn-small pull-right" id="uzatt"><%= t(:uzatt)%></a>
	<%= _script(%Q|$('\#uzatt').click(function(){$('div.hero-unit').hide('slow');$('\#menu').attr("style","margin-top:60px")})|)%>
</div>
<div class="row-fluid" id="menu">
	<div class="row-fluid">
	<div class="fb-like" data-send="true" data-width="450" data-show-faces="true"></div>
	</div>
	<div class="row-fluid">	
	<% OzjapaneseStyle.headings.each_with_index do |heading,i| %>
	<div class="span4 offset1" style="padding: 10px">
		<h2>
		<Heading>
			<%= t("#{heading}.title")%><span class="badge badge-info">8</span>
		</h2>
		<p>
			<%= t("#{heading}.desc")%>
		</p>
		<%= link_to_with_icon("#{t(:view_details)} &raquo",Ozlink.heading_link(heading,""),"btn","","icon-zoom-in","#{heading}_view_details") %>
		<% if current_flyer || debug? %>
		<%= link_to_with_icon("#{t(:write_new)} &raquo",Ozlink.heading_link(heading,"write"),"btn","","icon-pencil","#{heading}_write_new") %>
		<% else %>
		<%= link_to_with_icon("#{t(:write_new)} &raquo",Ozlink.heading_link(heading,"write"),"btn disabled","","icon-pencil","#{heading}_write_new") %>
		<div id="<%=heading%>_write_new_alert" style="display:none"><%= show_notice("#{t(:please_signin)} #{signin}")%></div>
		<%= _script(%Q|$('\##{heading}_write_new').click(function(){$('\##{heading}_write_new_alert').show('slow');return false;})|)%>
		<% end %>
	</div>
	<% end %>
	</div>
</div>
