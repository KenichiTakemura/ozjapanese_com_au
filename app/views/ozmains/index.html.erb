<%= show_alert %>
<%= render :partial => "layouts/sns" %>
<div class="hero-unit">
	<h1><%= t(:hello_world)%></h1>
	<p>
		<%= OzjapaneseStyle.hello_description%>
	</p>
	<%= render :partial => "ozmains/contact_us" %>
	<%= render :partial => "ozmains/site_detail" %>
	<a class="btn btn-info btn-small pull-right" id="uzatt"><%= t(:uzatt)%></a>
	<%= _script(%Q|$('\#uzatt').click(function(){$('div.hero-unit').hide('slow');$('\#menu').attr("style","margin-top:60px")})|)%>
</div>
<div class="row-fluid" id="menu">
	<div class="row-fluid">
	
	</div>
	<div class="row-fluid">
	<div class="span12">	
		<% OzjapaneseStyle.headings.each_with_index do |heading,i| %>
		<% if i.even? %>
		<div class="row-fluid">
		<% end %>
		<div class="span5 shadow" style="padding: 10px">
		<h2>
			<%= t("#{heading}.title")%>
		</h2>
		<p>
			<%= t("post.recent_post") %>&nbsp;<span class="badge badge-success"><%= @feed_cnt[heading]%></span>
		</p>
		<p>
			<%= t("#{heading}.desc")%>
		</p>
		<p>
		<div class="btn-toolbar">
		<div class="btn-group">
		<%= link_to_with_icon("#{t(:view_details)} &raquo",Ozlink.heading_link(heading,""),"btn","","icon-zoom-in","#{heading}_view_details") %>
		</div>
		<div class="btn-group">
		<%= post_write_new(heading)%>
		</div>
		</div>
		</p>
		</div>
		<% if i.even? %>
		</div>
		<% end %>
	<% end %>
	</div>
	</div>
</div>
