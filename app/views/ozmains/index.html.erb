<%= show_alert %>
<%= render :partial => "layouts/sns" %>	
<div class="row-fluid" id="open_view">
<% if !session[:uzatt]%>
<div class="hero-unit">
	<h1><%= t(:hello_world)%></h1>
	<p>
		<%= OzjapaneseStyle.hello_description%>
	</p>
	<%= render :partial => "ozmains/contact_us" %>
	<%= render :partial => "ozmains/site_detail" %>
	<%= link_to(t("uzatt"), uzatt_ozmains_path, :remote => true, :method => :post, :id => "", :class => "btn btn-info btn-small pull-right") %>
</div>
<% end %>
</div>

<div class="container-fluid">
<% if @recent_top_feed.present? %>
<div class="row-fluid">
<div class="span2" style="margin-left: 0px">
	<p class="lead"><span class="label label-inverse"><%=t("post.hot")%></span></p>
    <ul class="thumbnails">
    	<% @recent_top_feed.each do |feed|%>
    <li class="" style="margin-left: 0px">
    <div class="thumbnail">
	<p><%= I18n.t(feed.feeded_to_type)%></p>
    <p><%= show_flyer(feed.feeded_to.posted_by)%></p>
    <p><%= link_to(feed.feeded_to.subject,Ozlink.heading_link(OzjapaneseStyle.heading_by_model(feed.feeded_to_type),"link_viewed",{:d => feed.feeded_to_id}))%></p>
    <p><%= feed.feeded_to.postedDate %></p>
    </div>
    </li>
    <% end %>
    </ul>
</div>

<div class="span10">
<% end %>
<div class="row-fluid" id="menu">
	<ul class="pager">
		<% OzjapaneseStyle.headings.each do |heading| %>
			<% g = @feed[heading][0] + @feed[heading][1] + @feed_cnt[heading] %>
			<li><%= link_to(t("#{heading}.title"),"#", :class => "shadow", :onclick => "_activate_heading(#{OzjapaneseStyle.group_id(heading)});return false;")%></li>
		<% end %>
	</ul>
	<div class="row-fluid">
		<ul class="nav nav-tabs" id="heading_tab">
		<% OzjapaneseStyle.heading_groups.each_with_index do |group,i| %>
		<li style="display:none"><a href="#heading_<%=i%>"></a></li>
		<% end %>
		</ul>
		<div class="tab-content">
		<% OzjapaneseStyle.heading_groups.each_with_index do |group,i| %>
			<div class="tab-pane fade in" id="heading_<%=i%>">
			<% group.each do |heading| %>
			<div class="span6">
			<h2>
				<%= t("#{heading}.title")%>
			</h2>
			<p>
			<% if @feed[heading][0] > 0 %>
			<%= link_to(t("post.today_post"), Ozlink.heading_link(heading,"feed_view",{:f => "today"}), :onclick => '_scroll_top()', :remote => true, :method => :get) %>
			<% else %>
			<%= t("post.today_post") %>
			<% end %>
			&nbsp;<span class="badge badge-info"><%= @feed[heading][0] %></span>
			</p>
			<p>
			<% if @feed[heading][1] > 0 %>
			<%= link_to(t("post.yesterday_post"), Ozlink.heading_link(heading,"feed_view",{:f => "yesterday"}), :onclick => '_scroll_top()', :remote => true, :method => :get) %>
			<% else %>
			<%= t("post.yesterday_post") %>
			<% end %>
			&nbsp;<span class="badge badge-info"><%= @feed[heading][1] %></span>
			</p>
			<p>
			<% if @feed_cnt[heading] > 0 %>
			<%= link_to(t("post.recent_post"), Ozlink.heading_link(heading,"feed_view",{:f => "recent_week"}), :onclick => '_scroll_top()', :remote => true, :method => :get) %>
			<% else %>
			<%= t("post.recent_post") %>
			<% end %>
			&nbsp;<span class="badge badge-success"><%= @feed_cnt[heading]%></span>
			</p>
			<p>
			<%= t("#{heading}.desc")%>
			</p>
			<p style="margin-top: 40px">
			<div class="btn-toolbar">
			<div class="btn-group">
			<%= link_to_with_icon("#{t("post.newer")} &raquo",Ozlink.heading_link(heading,"newer"),"btn","","icon-zoom-in","#{heading}_view_details") %>
			</div>
			<div class="btn-group">
			<%= link_to_with_icon("#{t("post.older")} &raquo",Ozlink.heading_link(heading,"older"),"btn","","icon-zoom-in","#{heading}_view_details") %>
			</div>
			<div class="btn-group dropup">
			<%= post_write_new(heading, :signin_with_following)%>
			</div>
			</div>
			</p>
			</div>
			<% end %>			
			</div>
		<% end%>
		</div>
	<% gid = rand(OzjapaneseStyle.heading_groups.size)%>
	<%= _script_document_ready(%Q|
		$('#heading_tab a[href="#heading_#{gid}"]').tab('show');
	|)%>
	<%= _script(%Q|
		function _scroll_top() {
  			$('html,body').animate({ scrollTop: 0 }, 'slow');
  			$('\#open_view').html('#{image_tag("ajax-loader.gif")}');
		};
		function _activate_heading(group_id) {
			$('#heading_tab a[href="#heading_' + group_id + '"]').tab('show');
		}
	|)%>
	</div>
</div>

<% if @recent_top_feed.present? %>
</div>
</div>
<% end %>
</div>
