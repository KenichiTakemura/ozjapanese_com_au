<% OzjapaneseStyle.heading_groups.each_with_index do |group,i| %>
<div class="row-fluid">
	<% group.each do |heading| %>
	<div class="span6" id="page_<%= heading%>">
		<h2> <%= OzjapaneseStyle.heading_name(heading)%> </h2>
		<p>
			<% if @feed[heading][0] > 0 %>
			<%= link_to(t("post.today_post"), Ozlink.heading_link(heading,"feed_view",{:f => "today"}), :onclick => '_scroll_top()', :remote => true, :method => :get) %>
			&nbsp;<span class="badge badge-info"><%= @feed[heading][0] %></span>
			<% else %>
			<%= t("post.today_post") %>&nbsp;<%= @feed[heading][0] %>
			<% end %>
		</p>
		<p>
			<% if @feed[heading][1] > 0 %>
			<%= link_to(t("post.yesterday_post"), Ozlink.heading_link(heading,"feed_view",{:f => "yesterday"}), :onclick => '_scroll_top()', :remote => true, :method => :get) %>
			&nbsp;<span class="badge badge-info"><%= @feed[heading][1] %></span>
			<% else %>
			<%= t("post.yesterday_post") %>&nbsp;<%= @feed[heading][1] %>
			<% end %>
		</p>
		<p>
			<% if @feed_cnt[heading] > 0 %>
			<%= link_to(t("post.recent_post"), Ozlink.heading_link(heading,"feed_view",{:f => "recent_week"}), :onclick => '_scroll_top()', :remote => true, :method => :get) %>
			&nbsp;<span class="badge badge-success"><%= @feed_cnt[heading]%></span>
			<% else %>
			<%= t("post.recent_post") %>&nbsp;<%= @feed_cnt[heading]%>
			<% end %>
		</p>
		<p>
			<%= t("#{heading}.desc")%>
		</p>
		<p style="margin-top: 40px">
			<div class="btn-toolbar">
				<div class="btn-group dropup">
					<%= post_write_new(heading, :signin_with_following)%>
				</div>
				<div class="btn-group">
					<%= link_to_with_icon("#{t("post.newer")} &raquo",Ozlink.heading_link(heading,"newer"),"btn btn-link","","icon-zoom-in","#{heading}_view_details") %>
				</div>
				<div class="btn-group">
					<%= link_to_with_icon("#{t("post.older")} &raquo",Ozlink.heading_link(heading,"older"),"btn btn-link","","icon-zoom-in","#{heading}_view_details") %>
				</div>
			</div>
		</p>
	</div>
	<% end %>
</div>
<% end%>
